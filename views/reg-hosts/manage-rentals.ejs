<p class='display-3'>
Your Properties
<br>
<br>
<div class="container">
    <% for (let p of host_rentals) { %>
    <div class="row">
      <div class="col-sm"> 
          <div class= "container">
          <div class="card" style="width: 18rem;">
              <img class="card-img-top" src="https://www.gstatic.com/webp/gallery/1.jpg" alt="Card image cap">
              <div class="card-body">
                <h5 class="card-title"><strong><%= p.property_name %></strong></h5>
                <p class="card-text"><%= p.description %></p>
              </div>
              <ul class="list-group list-group-flush">
                <li class="list-group-item">Property class - <%= p.property_class %></li>
                <li class="list-group-item">
                  <div>
                    <p>
                      Address -:
                      <br>
                      <%= p.address %>
                      <br>
                      <%= p.city %>
                      <br>
                      <%= p.state %>
                    </p>
                  </div>
                </li>
                <li class="list-group-item">
                  <p>
                      Check-in date 
                      <br>
                      <%= p.chk_in_date %> 
                  </p>
                </li>

                <li class="list-group-item">
                    <p>
                        Check-out date 
                        <br>
                        <%= p.chk_out_date %> 
                    </p>
                  </li>
                  <li class="list-group-item">
                      <p>
                          Rental strength
                          <br>
                          <%= p.accomodation_strength %> 
                      </p>
                    </li>
                    <li class="list-group-item">
                        <p>
                            <%= p.cancellation_scheme %> 
                        </p>
                      </li>
              </ul>
              <div class="card-body">
                <form action="/handleme">
                  <a href="#" class="card-link">Click here for more details</a>
                  <input type="hidden" name="hostProperty_id" value= <%= p._id%>>
                </form>
                
                
              </div>
            </div>
          </div>

      </div>
      <div class="col-sm"> google maps location of the property </div> 
    </div>
    <br>
    <br>
    <% } %>
